{
    "name": "vscode-grammar-grid",
    "displayName": "Grammar Grid",
    "description": "[Pre-release] Interactive calculation grid with a custom DSL and Monaco formula bar.",
    "version": "0.0.1",
    "publisher": "jonnymuir",
    "preview": true,
    "license": "MIT",
    "type": "module",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Visualization",
        "Education"
    ],
    "keywords": [
        "calculation",
        "grid",
        "grammar",
        "langium",
        "spreadsheet"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jonnymuir/grammar-grid"
    },
    "bugs": {
        "url": "https://github.com/jonnymuir/grammar-grid/issues"
    },
    "homepage": "https://github.com/jonnymuir/grammar-grid#readme",
    "extensionKind": [
        "ui",
        "workspace",
        "web"
    ],
    "main": "./out/extension/main.cjs",
    "browser": "./out/browser/extension.cjs",
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "*.calc",
                "url": "./calc-schema.json"
            }
        ],
        "languages": [
            {
                "id": "calculation-language",
                "aliases": [
                    "Calculation Language",
                    "calculation-language"
                ],
                "extensions": [
                    ".calc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "calculation-language",
                "scopeName": "source.calculation-language",
                "path": "syntaxes/calculation-language.tmLanguage.json"
            }
        ],
        "customEditors": [
            {
                "viewType": "grammarGrid.editor",
                "displayName": "GrammarGrid Editor",
                "selector": [
                    {
                        "filenamePattern": "*.calc"
                    }
                ],
                "priority": "default"
            }
        ],
        "commands": [
            {
                "command": "grammarGrid.open",
                "title": "GrammarGrid: Open Editor"
            }
        ]
    },
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/calculation-language.tmLanguage.json ./syntaxes/calculation-language.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "calculation-language-language": "0.0.1",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "~1.74.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.5",
        "path-browserify": "^1.0.1",
        "util": "^0.12.5",
        "shx": "^0.3.4"
    },
    "vsce": {
        "dependencies": false
    }
}